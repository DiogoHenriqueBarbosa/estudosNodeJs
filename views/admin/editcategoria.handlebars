{{#if erros}}
    <div class="alert alert-danger">Dados Invalidos</div>
{{else}}
{{/if}}
<h3>Editar Categoria: </h3>
<div class="card">
    <div class="card-body">
        <form method="POST" action="/admin/categoria/edit">
            <label for="nome">Nome:</label>
            <input type="hidden" name="id" value="{{categoria._id}}">
            <input type="text" id="nome" name="nome" placeholder="Nome da Categoria" class="form-control mb-2" value="{{categoria.nome}}">
            <label for="slug">Slug: </label>
            <input type="text" id="slug" name="slug" placeholder="Slug da Categoria" class="form-control mb-2" value="{{categoria.slug}}">
            <button class="btn btn-success mt-4">Editar categoria</button>
        </form>
    </div>
</div>