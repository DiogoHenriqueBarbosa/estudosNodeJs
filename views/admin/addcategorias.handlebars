{{#if erros}}
    <div class="alert alert-danger">Dados Invalidos</div>
{{else}}
{{/if}}
<h3>Nova Categoria: </h3>
<div class="card">
    <div class="card-body">
        <form method="POST" action="/admin/categorias/nova">
            <label for="nome">Nome:</label>
            <input type="text" id="nome" name="nome" placeholder="Nome da Categoria" class="form-control mb-2">
            <label for="slug">Slug: </label>
            <input type="text" id="slug" name="slug" placeholder="Slug da Categoria" class="form-control mb-2">
            <button class="btn btn-success mt-4">Criar categoria</button>
        </form>
    </div>
</div>