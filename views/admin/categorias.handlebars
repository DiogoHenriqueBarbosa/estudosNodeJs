<h2>Lista de Categoria </h2>
<hr>
<a href="/admin/categoria/add"><button class="btn btn-success">Nova Categoria</button></a>
{{#each categoria}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small>
            </br>
            <a href="categorias/edit/{{_id}}"><button class='btn btn-success mt-4'>Editar</button></a>
        </div>
    </div>
{{else}}

{{/each}}   